@model IEnumerable<FinancialManagement.Domain.Entities.ChartOfAccount>
@{
    ViewData["Title"] = "Chart of Accounts";
}

<h1>Chart of Accounts</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Account</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().AccountCode)</th>
            <th>@Html.DisplayNameFor(model => model.First().AccountName)</th>
            <th>@Html.DisplayNameFor(model => model.First().AccountType)</th>
            <th>@Html.DisplayNameFor(model => model.First().IsActive)</th>
            <th>@Html.DisplayNameFor(model => model.First().CreatedDate)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AccountCode</td>
            <td>@item.AccountName</td>
            <td>@item.AccountType</td>
            <td>@(item.IsActive ? "Active" : "Inactive")</td>
            <td>@item.CreatedDate.ToString("yyyy-MM-dd")</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>