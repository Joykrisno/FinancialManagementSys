@model FinancialManagement.Domain.Entities.ChartOfAccount
@{
    ViewData["Title"] = "Edit Chart of Account";
}

<h1>Edit Chart of Account</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="AccountCode" class="form-label"></label>
        <input asp-for="AccountCode" class="form-control" />
        <span asp-validation-for="AccountCode" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="AccountName" class="form-label"></label>
        <input asp-for="AccountName" class="form-control" />
        <span asp-validation-for="AccountName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="AccountType" class="form-label"></label>
        <input asp-for="AccountType" class="form-control" />
        <span asp-validation-for="AccountType" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ParentAccountId" class="form-label"></label>
        <input asp-for="ParentAccountId" class="form-control" />
        <span asp-validation-for="ParentAccountId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="OpeningBalance" class="form-label"></label>
        <input asp-for="OpeningBalance" class="form-control" />
        <span asp-validation-for="OpeningBalance" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label"></label>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
