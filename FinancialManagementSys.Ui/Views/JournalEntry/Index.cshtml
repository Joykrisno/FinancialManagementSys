@{
    ViewData["Title"] = "Journal Entries";
}

<h2>Journal Entries</h2>
<a asp-action="Create" class="btn btn-primary mb-3">New Journal Entry</a>

<table id="journalTable" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Journal Number</th>
            <th>Date</th>
            <th>Description</th>
            <th>User</th>
            <th>Is Posted</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#journalTable').DataTable({
                ajax: {
                    url: '@Url.Action("GetJournalEntries", "JournalEntry")',
                    type: 'GET',
                    dataSrc: '',
                    error: function(xhr, error, code) {
                        console.log('DataTables Ajax Error:', error);
                        console.log('Status:', xhr.status);
                        console.log('Response:', xhr.responseText);
                        alert('Failed to load data. Check console for details.');
                    }
                },
                columns: [
                    { data: 'id' },
                    { data: 'journalNumber' },
                    {
                        data: 'journalDate',
                        render: function(data) {
                            if (data) {
                                return new Date(data).toLocaleDateString();
                            }
                            return '';
                        }
                    },
                    { data: 'description' },
                    { data: 'userName' },
                    {
                        data: 'isPosted',
                        render: function(data) {
                            return data ? 'Yes' : 'No';
                        }
                    },
                    {
                        data: 'id',
                        render: function (data) {
                            return `<a href='@Url.Action("Edit", "JournalEntry")/${data}' class='btn btn-sm btn-warning'>Edit</a>`;
                        }
                    }
                ],
                processing: true,
                serverSide: false,
                responsive: true,
                language: {
                    emptyTable: "No journal entries found",
                    loadingRecords: "Loading journal entries..."
                }
            });
        });
    </script>
}