@model FinancialManagement.Application.DTOs.JournalEntry.JournalEntryDto
@{
    ViewData["Title"] = "Edit Journal Entry";
}

<h2>Edit Journal Entry</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="JournalNumber" class="form-label"></label>
        <input asp-for="JournalNumber" class="form-control" readonly />
    </div>
    <div class="mb-3">
        <label asp-for="JournalDate" class="form-label"></label>
        <input asp-for="JournalDate" type="datetime-local" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <h4>Lines</h4>
    <div id="linesContainer">
        @for (int i = 0; i < Model.Lines.Count; i++)
        {
            <div class="line-item mb-2">
                <input type="hidden" asp-for="Lines[@i].Id" />
                <div class="row">
                    <div class="col">
                        <input asp-for="Lines[@i].AccountId" placeholder="Account ID" class="form-control" />
                    </div>
                    <div class="col">
                        <input asp-for="Lines[@i].Description" placeholder="Description" class="form-control" />
                    </div>
                    <div class="col">
                        <input asp-for="Lines[@i].DebitAmount" placeholder="Debit" class="form-control" />
                    </div>
                    <div class="col">
                        <input asp-for="Lines[@i].CreditAmount" placeholder="Credit" class="form-control" />
                    </div>
                </div>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success mt-3">Update</button>
</form>
